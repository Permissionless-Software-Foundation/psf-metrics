{
  "name": "psf-metrics",
  "version": "1.0.0",
  "description": "Metrics for the PSF organization, written to the BCH blockchain once per day. ",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "TEST=unit nyc mocha test/unit/",
    "test:integration": "mocha --timeout 25000 test/integration/",
    "test:temp": "mocha --timeout 25000 test/integration/metrics-integration.js",
    "lint": "standard --env mocha --fix",
    "docs": "./node_modules/.bin/apidoc -i src/ -o docs",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coverage:report": "nyc --reporter=html mocha test/unit/ --exit"
  },
  "keywords": [
    "bitcoin",
    "bitcoin cash",
    "wallet",
    "javascript",
    "cryptocurrency",
    "react",
    "front end",
    "client",
    "apidoc",
    "slp",
    "tokens"
  ],
  "author": "Chris Troutner <chris.troutner@gmail.com>",
  "license": "MIT",
  "apidoc": {
    "title": "psf-metrics",
    "url": "localhost:5000"
  },
  "repository": "Permissionless-Software-Foundation/psf-metrics",
  "dependencies": {
    "@psf/bch-js": "^4.7.2",
    "apidoc": "^0.23.0",
    "bch-util": "^1.2.2",
    "bitcoinfiles-node": "^0.5.4"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "eslint": "5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^4.3.0",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "semantic-release": "^17.3.7",
    "sinon": "^9.0.2",
    "standard": "^14.3.1"
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
